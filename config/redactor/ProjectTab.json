{
    "buttons": [
        "format",
        "bold",
        "italic",
        "lists",
        "link",
        "image",
        "file",
        "line"
    ],
    "plugins": [
        "scriptbuttons",
        "fullscreen",
        "alignment"
    ],
    "formatting": [
        "p",
        "blockquote"
    ],
    "formattingAdd": {
        "intro-p": {
            "title": "Intro Paragraph",
            "args": [
                "p",
                "class",
                "intro"
            ]
        },
        "header": {
            "title": "Header",
            "args": [
                "h2",
                "class",
                "sub-headline"
            ]
        },
        "subhead": {
            "title": "Sub-Header",
            "args": [
                "h5",
                "class",
                "intext-subhead"
            ]
        }
    }
}