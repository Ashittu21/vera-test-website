{
  "buttons": [
    "format",
    "bold",
    "horizontalrule",
    "italic",
    "lists",
    "link",
    "image",
    "line",
    "sup",
    "sub",
    "html"
  ],
  "imageResizable": true,
  "imagePosition": true,
  "plugins": ["fullscreen", "alignment","customstyles"],
  "formatting": ["p", "blockquote"],
  "formattingAdd": {
    "body": {
      "title": "Body",
      "api": "module.block.format",
      "args": {"tag": "p", "class": "type--body"}
    },
    "intro-p": {
      "title": "Intro Paragraph",
      "api": "module.inline.format",
      "args": {"tag": "p", "class": "type--body--large"}
    },
    "heading1": {
      "title": "Heading 1",
      "api": "module.block.format",
      "args": {"tag": "h2", "class": "h2"}
    },
    "heading2": {
      "title": "Heading 2",
      "api": "module.inline.format",
      "args": {"tag": "h3", "class": "h3"}
    },

    "heading1-sectra": {
      "title": "H1 - Sectra",
      "api": "module.inline.format",
      "args": {"tag": "h1", "class": "h1-sectra"}
    },
    "heading2-sectra": {
      "title": "H2 - Sectra",
      "api": "module.inline.format",
      "args": {"tag": "h2", "class": "h2-sectra"}
    },
    "heading3-sectra": {
      "title": "H3 - Sectra",
      "api": "module.inline.format",
      "args": {"tag": "h3", "class": "h3-sectra"}
    },
    "heading4-sectra": {
      "title": "H4 - Sectra",
      "api": "module.inline.format",
      "args": {"tag": "h4", "class": "h4-sectra"}
    },
    "heading5-sectra": {
      "title": "H5 - Sectra",
      "api": "module.inline.format",
      "args": {"tag": "h5", "class": "h5-sectra"}
    },
    "heading6-whyte": {
      "title": "H6 - Whyte",
      "api": "module.inline.format",
      "args": {"tag": "h6", "class": "h6-whyte"}
    },
    "heading7-whyte": {
      "title": "H7  - Whyte",
      "api": "module.inline.format",
      "args": {"tag": "p", "class": "h7-whyte"}
    },
    "heading5": {
      "title": "Heading 5",
      "api": "module.inline.format",
      "args": {"tag": "h5", "class": "h5"}
    },
    "heading6": {
      "title": "Heading 6",
      "api": "module.inline.format",
      "args": {"tag": "h6", "class": "h6"}
    },

    "lineThrough": {
      "title": "Line Through",
      "api": "module.inline.format",
      "args": {"tag": "span", "class": "line-through"}
    },
    "footnote": {
      "title": "Footnote",
      "api": "module.inline.format",
      "args": {"tag": "p", "class": "footnote"}
    },
    "dropcap": {
      "title": "Dropcap",
      "api": "module.block.format",
      "args": {"tag": "p", "class": "dropcap"}
    },
    "alpha-ordered": {
      "title": "Alpha Ordered",
      "api": "module.block.format",
      "args": {
          "tag": "ol",
          "class": "alpha-ordered"
      }
     }
  }
}
