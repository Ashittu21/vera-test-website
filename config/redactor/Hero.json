{
  "buttons": [
    "format",
    "bold",
    "italic",
    "html"
  ],
  "plugins": ["fullscreen","alignment","customstyles"],
  "formatting": ["p", "blockquote", "span"],
  "formattingAdd": {
    "underline": {
      "title": "Underline",
      "api": "module.inline.format",
      "args": {"tag": "span", "class": "underline"}
    },
    "underline2": {
      "title": "Underline 2",
      "api": "module.inline.format",
      "args": {"tag": "span", "class": "underline2"}
    },
    "underline3": {
      "title": "Underline 3",
      "api": "module.inline.format",
      "args": {"tag": "span", "class": "underline-hero underline-hero-1"}
    }
  }
}
