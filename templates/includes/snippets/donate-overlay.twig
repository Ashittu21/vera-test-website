<aside class="modal-outer donate-modal-outer" id="DonateOverlay">
    <span class="modal-close"></span>

    {% set donatePage = craft.entries.section('donate').first %}
    <section class="donate-intro">
        <div class="module-text container">
            <div class="module-text__inner">
                <h1 class="text-banner__heading--alt">
                    {{ donatePage.title }}
                </h1>
                {% if donatePage.donateCallToAction %}
                    {{ donatePage.donateCallToAction }}
                {% endif %}
            </div>
        </div>
    </section>

    <section class="post-module module-intro">
        <div class="container col-outer">
            <div class="one-half module-intro__content">
                <div class="donate-iframe-outer">{{ administrative.donateEmbed | raw }}</div>
            </div>

            <div class="one-half module-intro__sidebar">
                <aside class="donate-info">
                    <h4>{{ donatePage.otherWaysText }}</h4>

                    {% set waysToDonate = donatePage.donateOtherWays %}
                    {% if waysToDonate | length %}
                    <ul>
                        {% for donateMethod in waysToDonate %}
                        <li>
                            <h5>{{ donateMethod.explainer }}</h5>

                            <p>
                            {{ donateMethod.info }}
                            </p>
                        </li>
                        {% endfor %}
                    </ul>
                    {% endif %}

                    <div class="footnote">
                        {{ donatePage.donateLegalText }}
                    </div>
                </aside>
            </div>
        </div>
    </section>
</aside>