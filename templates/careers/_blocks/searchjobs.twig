<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="CopySection-heading">Job openings</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 py-5 sj-content">
            <div class="sj-headContent ">
                <div class="rs-head-form">
                    <div class="contentInput">
                        <input type="search" placeholder="Search positions" class="contentInput_search">
                        <button class="contentInput__close"></button>
                        <button class="contentInput-search"></button>
                    </div>
                    <div class="dropMenu dropdown-areas">
                        <button class="dropdown-toggle" type="button" id="menuJobtype" aria-haspopup="true">
                           <span class="dropdown-text-jobtype">select a job type</span>
                           <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-teams" id="listJobtype" aria-labelledby="menuJobtype">
                           {% for item in jobtype %}
                                {% set item_id = item.id %}
                                <li class="checkFilter">
                                  <input type="checkbox" name='optionsJobtype[]' id="jobtype-{{ item_id }}" class="jobtype_checkbox option justone checktypejob" value="{{ item_id }}" data-category="jobtype"/>
                                  <label class="labelTopic" for="jobtype-{{ item_id }}">
                                       {{item.title}}
                                  </label>
                                </li>
                           {% endfor %}
                        </ul>
                    </div>
                    <div class="dropMenu dropdown-areas">
                        <button class="dropdown-toggle" type="button" id="menuTeam" aria-haspopup="true">
                           <span class="dropdown-text-teams">Select a team</span>
                           <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-teams" id="listTeams" aria-labelledby="menuTeam">
                           {% for item in teams %}
                                {% set item_id = item.id %}
                                <li class="checkFilter">
                                  <input type="checkbox" name='optionsTeams[]' id="teams-{{ item_id }}" class="teams_checkbox option justone checkteams" value="{{ item_id }}" data-category="teams"/>
                                  <label class="labelTopic" for="teams-{{ item_id }}">
                                       {{item.title}}
                                  </label>
                                </li>
                           {% endfor %}
                        </ul>
                    </div>
                    <div class="dropMenu dropdown-areas">
                        <button class="dropdown-toggle" type="button" id="menuLocation" aria-haspopup="true">
                           <span class="dropdown-text-locations">Select a location</span>
                           <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-locations" id="listLocations" aria-labelledby="menuLocation">
                           {% for item in locations %}
                                {% set item_id = item.id %}
                                <li class="checkFilter">
                                  <input type="checkbox" name='optionsLocations[]' id="location-{{ item_id }}" class="locations_checkbox option justone" value="{{ item_id }}" data-category="locations"/>
                                  <label class="labelTopic" for="location-{{ item_id }}">
                                       {{item.title}}
                                  </label>
                                </li>
                           {% endfor %}
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="rs-tags">
            <div id="JobsearchTags"></div>
          </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 tablejob_container">   
            <table class="table tableJob">
                <thead class="tableJob_head">
                  <tr>
                    <th scope="col">Position</th>
                    <th scope="col">Type</th>
                    <th scope="col">Location</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="tableJob_headline">
                    <th colspan="4" scope="colgroup" class="text-star p-4">Permanent positions</th>
                  </tr>
                  <tr class="tableJob_row">
                    <td scope="row">
                        <p class="title">Senior Program Associate, Operations & Quality Assurance, Center
                        on Immigration and Justice, Unaccompanied Children Program
                        </p>
                        <p class="label">Team:Accounting</p>
                    </td>
                    <td>Full-time</td>
                    <td>Brooklyn</td>
                    <td> <a href="#" class="theButton"><span>Apply Now</span>
                    </a>
                     </td>
                  </tr>
                  <tr class="tableJob_row">
                    <td scope="row">
                        <p class="title">Technology and Personnel Security  Compliance Manager, ITS, Acacia Center for justice ( Remote) </p>
                        <p class="label">Team:Accounting</p>
                    </td>
                    <td>Full-time</td>
                    <td>Brooklyn</td>
                    <td> <a href="#" class="theButton"><span>Apply Now</span>
                    </a>
                     </td>
                  </tr>
                  <tr class="tableJob_row">
                    <td scope="row">
                        <p class="title">Senior Program Associate, Operations & Quality Assurance, Center
                        on Immigration and Justice, Unaccompanied Children Program
                        </p>
                        <p class="label">Team:Accounting</p>
                    </td>
                    <td>Full-time</td>
                    <td>Brooklyn</td>
                    <td> <a href="#" class="theButton"><span>Apply Now</span>
                    </a>
                     </td>
                  </tr>
                  <tr class="tableJob_headline">
                    <th colspan="4" scope="colgroup" class="text-star p-4">Temporary positions</th>
                  </tr>
                  <tr class="tableJob_row">
                    <td scope="row">
                        <p class="title">Technology and Personnel Security  Compliance Manager, ITS, Acacia Center for justice ( Remote) </p>
                        <p class="label">Team:Accounting</p>
                    </td>
                    <td>Full-time</td>
                    <td>Brooklyn</td>
                    <td> <a href="#" class="theButton"><span>Apply Now</span></a>
