<!-- our values -->


<div class="container">
  <aside class="hr"></aside>
</div>

<!-- where we work -->
<article class="post-module about__where">
  <div class="container">
    <h3 class="about__heading">{{ entry.whereWeWorkHeader }}</h3>
    <p class="about__subheading">{{ entry.whereWeWorkExplainer }}</p>

    {% include 'includes/snippets/datamaps' with {showOffices: true, showCount: true} %}
  </div>
</article>

<article class="post-module about__history">
  <div class="container">
    <div class="col-outer">
      <div class="col-lg">
        <h3 class="about__heading">{{ entry.ourHistoryHeader }}</h3>
        <p>{{ entry.ourHistoryExplainer }}</p>
      </div>

      <div class="col-sm">
        {% for photo in entry.ourHistoryPhotos %}
          <div class="img-outer">
            <img src="{{ photo.url }}" alt="{{ photo.caption }}"/>

            <span class="img-caption">
              {{ photo.caption }}
            </span>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</article>