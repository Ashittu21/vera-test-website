
<!-- Latest News Items -->
    <section class="block-latestNews -h">
    	<div class="block-latestNews-content">
				{% if block.newsItems_item |length %}
    		<div class="latestNews-items">
    		  {% for newsItem in block.newsItems_item %}
						<!-- {{ newsItem.type.handle }} -->

							{% if newsItem.streamImageRectangle | length %}
								{% set imageset = newsItem.streamImageRectangle %}
							{% endif %}

					  {% switch newsItem.type.handle %}
   						{% case 'story' %}
  							{% if newsItem.heroImage is not null %}
										<!-- hero image -->
                    {% set imageset = newsItem.heroImage.one() %}
										<!-- {{ imageset.getUrl() }} -->
                {% elseif newsItem.streamImageSquare is not null %}
										<!-- stream image square -->

                    {% set imageset = newsItem.streamImageSquare.one() %}
										<!-- {{ imageset.getUrl() }} -->
                {% endif %} 		
						{% endswitch %}

					
          <a href="{{ newsItem.url }}" class="latestNews-item">
    				<div class="latestNews-item-category">
    					<p>{{ newsItem.type.name | title | upper }}</p>
    				</div>
    				<div class="latestNews-item-image"
    					style="background-image: url('{{ imageset.getUrl() }}');">
    				</div>
    				<div class="latestNews-item-copy">
    					<h5 class="latestNews-item-copy-title">
    						<span>{{ newsItem.title }}</span>
    					</h5>
    					<div class="latestNews-item-copy-date">
    						<time datetime="2018-07-07">{{ newsItem.postDate | date("M d, Y") }}</time>
    					</div>
    				</div>
    			</a>
          {% endfor %}
    		</div>
				{% endif %} 
				<div class="latestNews-items-link">
				 <a href="#">View more news & stories<span class="icon-arrow"></span></a>
				</div>
    	</div>
    </section>
<!-- Latest News  Items -->