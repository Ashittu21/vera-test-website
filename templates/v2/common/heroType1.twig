<!-- Hero Block -->
  <div class="heroType1-container"  style="background-image: url('{{ block.heroType1_image.first.url }}');">
    <div class="heroType1-block-box">
        <div class="heroType1-block-box-content">
          <div class="heroType1-block-breadcrumbs">
            {% if entry.level > 1 %}
                <a href="{{ siteUrl }}">HOME</a>
                {% for crumb in entry.getAncestors() %}
                  // {{ crumb.getLink() }} 
                {% endfor %}
            {% else %}
            <a href="{{ siteUrl }}">HOME</a>
            {% endif %}  
          </div>
          <div class="heroType1-block-title">
            <h1>{{ block.heroType1_title }}</h1>
          </div>
        </div>
    </div>
    
          {#  Image Attribution #}
            {%- if entry.heroType1_image.first.attribution -%}
              <div class="imageAttrib">
                <div class="imageAttrib-wrap">
                  {%- if entry.heroType1_image.first.attributionLink -%}
                      <a href="{{ entry.heroType1_image.first.attributionLink }}" target="_blank"> {{- entry.heroType1_image.first.attribution -}}</a>
                  {%- else -%}
                    {{- entry.heroType1_image.first.attribution -}}
                  {%- endif -%}
                </div>
              </div>
              {%- endif -%}
          {#  Image Attribution #}    
  </div>

    {% if block.exploreMore is defined %}
       {% if block.exploreMore|length %}
        <div class="exploreLinks">
          <div class="exploreLinks-container">
              <div class="exploreLinks-container-items">
                <div class="exploreLinks-container-items-title">Explore More:</div>
                {% for exploreItem in block.exploreMore %}
                    <a href="{{ exploreItem.url }}">{{ exploreItem.title }}</a> <span>//</span>
                {% endfor %}
              </div>
            </div>
        </div>
       {% endif %}
    {% endif %}
<!-- END Hero Block -->