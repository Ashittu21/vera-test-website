
    <!-- Partners -->
    <section class="partners-block-container">
      <div class="headTitle bgColor-darkviolet">
        <div class="headTitle-content headTitle-content--small">
          <div class="headTitle-title ">
            <h3 class="separator left-aligned"><span>{{ block.partners.title }}</span></h3>
          </div>
        </div>
      </div>

      <div class="partners-block-content">

        <div class="partners-block-copy">
          {{ block.partners_copy }}
        </div>

        <div class="partners-block-logos">
        {% if block.partners_items|length %}
          {% for partner in block.partners_items %}
           {% if partner.type == 'partners_image' %}
             <a {{ partner.partners_link.getLinkAttributes() }}><img src="{{ partner.partners_image.first.url }}" ></a>
           {% elseif partner.type == 'partners_text' %}
           		<a {{ partner.partners_link.getLinkAttributes() }}>{{ partner.partners_link.customText }}</a>
           {% endif %}
           {% endfor %}
        {% endif %}
        </div>

      </div>
    </section>
    <!-- Partners -->