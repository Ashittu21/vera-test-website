
{% extends '_layout' %}
{% set isHome = true %}

{% block nav %}
  {% include 'includes/snippets/header' with {isHome: isHome} %}
{% endblock %}

{% block content %}

	<div class="home">
    {% for block in entry.homeBlocks.level(1).all() %}
        {% switch block.type.handle %}
            {% case 'heroType3' %}
              {% include 'v2/common/heroType3'  with { block: block } %}
            {% case 'heroType2' %}
              {% include 'v2/common/heroType2'  with { block: block } %}
            {% case 'latestNews' %}
              {% include 'v2/common/latestNews' with { block: block } %}
            {% case 'signUp' %}
              {% include 'v2/common/signUp'     with { block: block } %}
            {% case 'newsItems' %}
              {% include 'v2/common/newsItems'  with { block: block } %}
            {% case 'headerTitle' %}
              {% include 'v2/common/headerTitle'  with { block: block } %}
            {% case 'map' %}
              <div class="mapContainer">
                {% include 'vera-maps/_maptypesBlock'  with { block: block } %}
              </div>
            {% case 'HomeCharts' %}
              <div class="home-content">
                <div class="home-content-items">
                  {% for chartItem in block.HomeCharts %}
                  <div class="home-content-item">
                    <div class="home-content-item-left">
                      <div class="home-content-item-left-title">
                        {{ chartItem.homeItemsTitle }}
                      </div>
                      <div class="home-content-item-left-copy">
                        {{ chartItem.homeItemsCopy }}
                      </div>
                      <div class="home-content-item-left-cta">
                        <a href="{{ chartItem.homeItemsCTA.getUrl() }}" class="button button-2x orange arrow"><span> {{ chartItem.homeItemsCTA.customText }}</span></a>
                      </div>
                      
                    </div>
                    <div class="home-content-item-right 
                        {% if chartItem.homeItemsLayout == 'vertical' %}vertical{% endif %} 
                        {% if chartItem.homeItemsLayout == 'horizontal' %}horizontal{% endif %} 
                        {% if chartItem.homeItemsLayout  == 'single' %}single{% endif %}">

                      <div class="home-content-item-right-image">
                        <object id ="animated-svg" type="image/svg+xml" data="{{ chartItem.homeItemsGraphImage.first.url }}"></object>
                      </div>
                      <div class="home-content-item-right-copy">
                      {{ chartItem.homeItemsGraphCopy }}
                      </div>

                    </div>
                    <div class="home-content-item-cta">
                        <a href="{{ chartItem.homeItemsCTA.getUrl() }}" class="button button-2x orange arrow"><span> {{ chartItem.homeItemsCTA.customText }}</span></a>
                      </div>
                  </div>  
                  {% endfor %} 
                </div>
              </div>
            
        {% endswitch %}
    {% endfor %}

	</div>
{% endblock %}

