<header class="header-site" id="header-desktop">
  <section class="header-v2 bgBlue" id="header-v2">
  <div class="bg-blue">
     {% if entry.uri == "__home__" %}
        {% include 'head-banner/expanded.twig' %}
        {% include 'head-banner/collapsed.twig' %}
     {% endif %}
    </div>
    <div class="rowTop" id="rowTop">
      <div class="rowTop-container">
        <div class="menu-left" id="header-v2-top-nav">

          {% set navigationTop = craft.entries.section('navigationTop') %}
          <ul class="top-left-menu clicky-menu no-js ">
            {% for node in navigationTop.level(1).all() %}
              {% if node.hasDescendants() %}
                <li>
            
                  <a {{ node.navigationMain_linkField.getLinkAttributes() }}>
                   <div class="textWrap">{{ node.title }}<div class="textWrap-icon"></div></div>
                  </a>
                  <ul>
                    {% set nodeSubs = node.getChildren() %}
                    {% for nodeSub in nodeSubs.all() %}
                    
                      <li  {% if nodeSub.navigation_MobileDisabled %}class="hideOnMobile"{% endif %}>
                        <a {{ nodeSub.navigationMain_linkField.getLinkAttributes() }}>
                          <span class="subItemWrap">{{ nodeSub.title }}</span>
                        </a>
                      </li>
                     
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li>
                  <a {{ node.navigationMain_linkField.getLinkAttributes() }}>
                    {{ node.title }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>

        </div>
        <div class="menu-center">
          <h1>
            <a class="logo" href="{{ siteUrl }}">
              Vera Institute of Justice
            </a>
          </h1>
        </div>
        <div class="d-md-block menu-right">


          <div class="search">
            <div class="search-wrapper">
              <form class="input-holder" action="{{ siteUrl }}search" method="GET">
                  <div class="txt-label" id="searchLabel" >Search</div>
                  <input type="text" class="search-input" id="searchInput" name="query" placeholder="Search"/>
                  <button class="search-icon" id="searchButton">
                    <span></span>
                  </button>

              </form>
              <span class="close" id="searchClose"></span>
            </div>
          </div>
          <div class="donate h-100 ">
            {% if not hideDonate %}
              <a href="{{ administrative.donateButtonLink }}" class="button arrow">Donate</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <div class="rowBottom" id="rowBottom">
      <div class="rowBottom-container"> 
        <div id="header-v2-bottom-nav">
          <div class="isologo">
            <a href="{{ siteUrl }}"><img src="/dist/img/v2/vera-isologo.svg"></a>
          </div>

          {% set navigationMain = craft.entries.section('navigationMain') %}
          <ul class="row-bottom-menu clicky-menu no-js">
            {% for node in navigationMain.level(1).all() %}
              {% if node.hasDescendants() %}
                <li>
                  <a {{ node.navigationMain_linkField.getLinkAttributes() }}>
                    {{ node.title }}
                  </a>
                  <ul>
                    {% set nodeSubs = node.getChildren() %}
                    {% for nodeSub in nodeSubs.all() %}
                      <li>
                        <a {{ nodeSub.navigationMain_linkField.getLinkAttributes() }}>
                          <div class="hover-arrow">{{ nodeSub.title }}</div>
                          <span>{{ nodeSub.navigationMain_explainer	}}</span>
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li class="clicky-menu-item">
                  <a {{ node.navigationMain_linkField.getLinkAttributes() }} class="no-submenu">
                    {{ node.title }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>

        </div>
      </div>
    </div>
  </div>
</section>


<!-- Mobile Nav -->

<section class="header-v2-mobile">

  <div class="header-v2-mobile-row">

    <div class="header-v2-mobile-row-container">
      <div class="header-v2-mobile-row-container-button">

        <button class="hamburger hamburger--squeeze" type="button" aria-label="Menu" aria-controls="navigation">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>

        <div class="menuText">
          <span>Menu</span>
        </div>
      </div>

      <a class="isologo-mobile" href="{{ siteUrl }}">
        <img src="/dist/img/v2/vera-isologo.svg">
      </a>

      <div class="donate-mobile">
             {% if not hideDonate %}
               <a href="{{ administrative.donateButtonLink }}" class="button-donate arrow">Donate</a>
            {% endif %}
      </div>
    </div>

    <div class="mobile-nav">
      <div class="w-opacity"></div>
      <div id="section-01">
        {% set navigationMain = craft.entries.section('navigationMain') %}
        <ul>
          {% for node in navigationMain.level(1).all() %}
            {% if node.hasDescendants() %}
              <li class="dropMobile">
                <a href="#" data-toggle="dropMobile">
                  {{ node.title }}
                </a>
                <ul class="dropMobile-menu">
                  {% set nodeSubs = node.getChildren() %}
                  {% for nodeSub in nodeSubs.all() %}
                    <li>
                      <a {{ nodeSub.navigationMain_linkField.getLinkAttributes() }}>
                        {{ nodeSub.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </li>
            {% else %}
              <li>
                <a {{ node.navigationMain_linkField.getLinkAttributes() }} class="no-submenu">
                  {{ node.title }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </div>

        <div id="section-02">

          {% set navigationTop = craft.entries.section('navigationTop') %}
          <ul>
            {% for node in navigationTop.level(1).all() %}
              {% if node.hasDescendants() %}
                <li class="dropMobile {% if node.navigation_MobileDisabled %}hideOnMobile{% endif %}" >
                  <a href="#" data-toggle="dropMobile">
                    {{ node.title }}
                  </a>
                  <ul class="dropMobile-menu">
                    {% set nodeSubs = node.getChildren() %}
                    {% for nodeSub in nodeSubs.all() %}
                      <li class="{% if nodeSub.navigation_MobileDisabled %}hideOnMobile{% endif %}">
                        <a {{ nodeSub.navigationMain_linkField.getLinkAttributes() }}>
                          {{ nodeSub.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li>
                  <a {{ node.navigationMain_linkField.getLinkAttributes() }}>
                    {{ node.title }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>

        </div>

        <div id="section-search">
          <div class="search-wrapper active">
            <form class="input-holder" action="{{ siteUrl }}search" method="GET">
                <div class="txt-label">Search</div>
                <input type="text" class="search-input" name="query" placeholder="Search">
                <button class="search-icon">
                  <span></span>
                </button>
            </form>
          </div>
        </div>
        
      </div>
    </div>
  </section>
</header>
